extends layout.pug

block content
    div.row.justify-content-center
        div.col-md-4
            a.btn.btn-success.btn-block(href="/supervisorregistration") Register Supervisor 
            a.btn.btn-danger.btn-block(href="/supervisordashboard") Remove Supervisor 
            a.btn.btn-success.btn-block(href="/sitterregistration") Register Sitter 
            a.btn.btn-danger.btn-block(href="/sitterdashboarddb") Remove Sitter 
            a.btn.btn-secondary.btn-block(href="/officialdashboard") View Customer Details
            a.btn.btn-primary.btn-block(href="/officiallogout") Logout

        div.col-md-7
            div.card-body.border
                header.card-header
                    h4.card-title.text-center.pt-1 Sitter's Registration



                article.card-body
                form.needs-validation(novalidate="" name="sitterregistration" method="POST" action="/sitterregistration" )
                    div.form-row
                        div.col.form-group
                            label First name
                            input#firstName.form-control(type="text" placeholder="Enter first name" value="" name="sitterfirstname" required="")
                            .invalid-feedback
                                | Valid first name is required and not more than 45 characters..
                                      
                                                                        

                        div.col.form-group
                            label Last name
                            input#lastName.form-control(type="text" placeholder="Enter last name" value="" name="sitterlastname" required="")
                            .invalid-feedback
                                | Valid last name is required.
                        div.col.form-group
                            label Sitter's ID
                            input(type='text', name='sitterusername', class='form-control', id='sitterusername', placeholder='e.g MO0001', required, data-required-msg='Username is required')

                    div.form-row
                        div.col.form-group
                            label Email address
                            input(type='email', name='sitteremailaddress', class='form-control', id='sitteremailaddress', placeholder='Enter email address', required, data-required-msg='Email address is required')
                    div.form-row
                        div.col.form-group
                            label Physical address
                            input(type='text', name='sitterphysicaladdress', class='form-control', id='sitterphysicaladdress', placeholder='Enter physical address', required, data-required-msg='Physical address is required')


                    div.form-row
                        div.col.form-group
                            label.form-check.form-check-inline
                                input.form-check-input(type="radio" name="sittergender" value="male")
                                span.form-check-label Male
                        div.col.form-group
                            label.form-check.form-check-inline
                                input.form-check-input(type="radio" name="sittergender" value="female")
                                span.form-check-label Female




                    div.form-row
                        div.col.form-group
                            label Create password
                            input(type='password', name='sitterpassword', class='form-control', id='sitterpassword', placeholder='Enter password', required, data-required-msg='Password is required')
                    div.form-row
                        div.col.form-group
                            button.btn.btn-primary.btn-block(type="submit") Register
                        

                    div.form-row
                        small.col.text-muted By clicking the 'Sign Up' button, you confirm that you accept our 
                            <br> Terms of use and Privacy Policy.

    script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
    script.
      window.jQuery || document.write('<script src="/docs/4.4/assets/js/vendor/jquery.slim.min.js"><\\/script>')
    script(src="js/bootstrap.bundle.min.js" )
    script(src="js/form-validation.js")

                









